    </script>
</div>




<script type="text/javascript">

        jQuery(function() { // wait for the DOM to be ready
            jQuery('#newsletter-validate-detail').submit(function() { // bind function to submit event of form
                jQuery.ajax({
                    type: jQuery(this).attr('method'), // get type of request from 'method'
                    url: jQuery(this).attr('action'), // get url of request from 'action'
                    data: jQuery(this).serialize(), // serialize the form's data
                    success: function(response) {
                        // if everything goes well, update the div with the response
                        jQuery('#newsletter').val(' ');
						
                        jQuery('#feedback').show();
						jQuery('#feedback').css('color', '#3c763d');
						jQuery('#feedback').css('background-color', '#dff0d8');
						jQuery("#feedback").delay(5000).fadeOut( "slow" );
                        
                    }
                });
                return false; // important: prevent the form from submitting
            });
        });
        
</script>